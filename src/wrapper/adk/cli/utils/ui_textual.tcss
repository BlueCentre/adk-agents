Screen {
    background: transparent;
}

.light {
    background: #f5f5f5;
    color: #333333;
}

.dark {
    background: transparent;
    color: #cccccc;
}

#main-content {
    height: 1fr;
}

.output-pane {
    width: 2fr;
    border: solid #6a6aff;
    margin: 1;
    padding: 0 0;
    # background: #2d2d4a;
    height: 1fr;
    overflow-y: scroll;
    scrollbar-size: 0 0;
}

.thought-pane {
    width: 1fr;
    border: solid #ff6aff;
    margin: 1;
    padding: 0 0;
    # background: #2d2d4a;
    height: 1fr;
    overflow-y: scroll;
    scrollbar-size: 0 0;
}

#input-area {
    height: 5;
    border: solid white;
    margin: 1;
    padding: 0 1;
    # background: transparent;
}

.light .output-pane {
    background: #e8e8f5;
    border: solid #a0a0ff;
}

.dark .output-pane {
    background: transparent;
    border: solid #6a6aff;
}

.light .thought-pane {
    background: #e8f0f0;
    border: solid #a0b0b0;
}

.dark .thought-pane {
    background: transparent;
    border: solid #6a7a7a;
}

.light .input-pane {
    background: #e8f5e8;
    border: solid white;
}

.dark .input-pane {
    background: transparent;
    border: solid white;
}

Footer {
    height: 1;
    dock: bottom;
    background: #2a2a2a;
    color: #dddddd;
    text-align: center;
}

#status-bar {
    height: 1;
    dock: bottom;
    background: #2a2a2a;
    color: #dddddd;
    text-align: center;
}

.light Footer {
    background: #bbbbbb;
    color: #111111;
}

.dark Footer {
    background: #2a2a2a;
    color: #dddddd;
}

.info {
    color: blue;
}
.warning {
    color: yellow;
}
.error {
    color: red;
}
.success {
    color: lightgreen;
}
.accent {
    color: #FFD700;
}
.highlight {
    color: #ADD8E6;
}
.user {
    color: #87CEEB;
    text-style: italic;
}
.agent {
    color: white;
}
.welcome {
    color: #FF69B4;
    text-style: bold;
}

/* Completion Dialog Styles */
CompletionWidget {
    align: center middle;
    background: rgba(0, 0, 0, 0.3);
}

#completion-dialog {
    width: 60;
    height: 20;
    border: solid white;
    background: #2d2d4a;
    padding: 1;
    scrollbar-size: 0 0;
}

#completion-title {
    text-align: center;
    text-style: bold;
    color: #87CEEB;
}

#completion-list {
    height: 1fr;
    border: solid #6a6aff;
}

#completion-help {
    text-align: center;
    color: #666666;
    text-style: italic;
}

.light #completion-dialog {
    background: #e8e8f5;
    border: solid #333333;
}

.light #completion-list {
    border: solid #a0a0ff;
}

/* Full completion dialog (when showing all options) */
.completion-dialog-full {
    width: 100;
    height: 25;
}
